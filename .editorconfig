# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Newline ending every file
[*]
end_of_line = crlf
indent_style = space
indent_size = 4
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[**/*.sh]
end_of_line = lf

[**/*.json]
indent_size = 2
