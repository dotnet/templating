<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\Version.props" />
  <PropertyGroup>
    <TargetFramework>netstandard1.0</TargetFramework>
    <Description>This package contains the localized satellite assemblies for Microsoft.TemplateEngine.Cli. Reference this package only if you want msbuild output to be localized in cs;de;es;fr;it;ja;ko;pl;pt-BR;ru;tr;zh-Hans;zh-Hant.</Description>
    <IncludeBuildOutput>False</IncludeBuildOutput>
    <IncludeSource>False</IncludeSource>
    <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
    <EnableDefaultItems>False</EnableDefaultItems>
    <BaseIntermediateOutputPath>$(MSBuildThisFileDirectory)..\..\artifacts\scratch</BaseIntermediateOutputPath>
    <DisabledWarnings>CS2008</DisabledWarnings>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Remove="Microsoft.NETCore.App" />
    <PackageReference Remove="NETStandard.Library" />
    <Compile Remove="$(GitInfoFile)" />
    <Compile Remove="$(MSBuildThisFileDirectory)../../src/GitInfo.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Include="$(ArtifactsFolder)\localize\**\Microsoft.TemplateEngine.Cli.resources.dll">
      <Pack>true</Pack>
      <PackagePath>lib\netstandard1.5</PackagePath>
    </Content>
    <Content Remove="$(ArtifactsFolder)\localize\ploc\Microsoft.TemplateEngine.Cli.resources.dll"/>
  </ItemGroup>

  <Target Name="SignResources" BeforeTargets="CopyFilesToOutputDirectory" Outputs="%(Content.Identity)">
    <GetFrameworkSdkPath>  
      <Output  
        TaskParameter="Path"  
        PropertyName="SdkPath" />  
    </GetFrameworkSdkPath>  
    <Exec Command="&quot;$(SdkPath)bin\NETFX 4.6.1 Tools\sn.exe&quot; -R &quot;%(Content.Identity)&quot; &quot;$(MSBuildThisFileDirectory)..\..\key.snk&quot;" />
  </Target>
</Project>
