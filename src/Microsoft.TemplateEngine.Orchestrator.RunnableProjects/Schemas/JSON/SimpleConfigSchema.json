{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "author": { "type": "string" },
    "classifications": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "identity": {
      "type": "string",
      "minLength": 1
    },
    "groupIdentity": { "type": "string" },
    "shortName": { "type": "string" },
    "tags": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "include": {
            "type": [ "array", "string" ],
            "items": {
              "type": "string",
              "format": "globbing-pattern"
            },
            "default": [ "**/*" ]
          },
          "exclude": {
            "type": [ "array", "string" ],
            "items": {
              "type": "string",
              "format": "globbing-pattern"
            },
            "default": [
              ".netnew.json",
              "**/[Bb]in/",
              "**/[Oo]bj/",
              "**/*.user"
            ]
          },
          "copyOnly": {
            "type": [ "array", "string" ],
            "items": {
              "type": "string",
              "format": "globbing-pattern"
            },
            "default": [
              "**/*.png",
              "**/*.jpg",
              "**/*.gif",
              "**/*.woff",
              "**/*.ttf",
              "**/*.dll",
              "**/*.exe",
              "**/*.mp4",
              "**/*.mpeg",
              "**/*.mp3",
              "**/*.avi",
              "**/*.vob",
              "**/*.iso",
              "**/*.vhd",
              "**/*.vhdx",
              "**/*.zip",
              "**/*.tar",
              "**/*.tar.gz",
              "**/*.rar",
              "**/*.7z"
            ]
          },
          "source": {
            "type": "string",
            "default": "./"
          },
          "target": {
            "type": "string",
            "default": "./"
          },
          "modifiers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "condition": { "type": "string" },
                "include": {
                  "type": [ "array", "string" ],
                  "items": {
                    "type": "string",
                    "format": "globbing-pattern"
                  },
                  "minItems": 1
                },
                "exclude": {
                  "type": [ "array", "string" ],
                  "items": {
                    "type": "string",
                    "format": "globbing-pattern"
                  },
                  "minItems": 1
                },
                "copyOnly": {
                  "type": [ "array", "string" ],
                  "items": {
                    "type": "string",
                    "format": "globbing-pattern"
                  },
                  "minItems": 1
                }
              },
              "required": [ "condition" ]
            }
          }
        },
        "minProperties": 1
      },
      "minItems": 1
    },
    "symbols": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "type": {
                "type": "string",
                "enum": [ "parameter" ]
              },
              "binding": {
                "type": "string",
                "enum": [ "name" ]
              },
              "replaces": {
                "type": "string"
              }
            },
            "required": [ "type" ]
          },
          {
            "properties": {
              "type": {
                "type": "string",
                "enum": [ "computed" ]
              },
              "condition": {
                "type": "string"
              }
            },
            "required": [ "type", "condition" ]
          },
          {
            "properties": {
              "type": {
                "type": "string",
                "enum": [ "generated" ]
              },
              "generator": {
                "type": "string"
              },
              "parameters": {
                "type": "object"
              },
              "replaces": {
                "type": "string"
              }
            },
            "required": [ "type", "generator" ]
          }
        ]
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "expandEnvironmentVariables": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string"
              }
            },
            "required": [ "pattern" ]
          },
          "minProperties": 1
        },
        "syntaxOverrides": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "conditionals": {
                "type": "object"
                //TODO: Finish the overrides
              }
            }
          }
        }
      }
    }
  },
  "required": [ "author", "classifications", "name", "shortName", "identity" ]
}
