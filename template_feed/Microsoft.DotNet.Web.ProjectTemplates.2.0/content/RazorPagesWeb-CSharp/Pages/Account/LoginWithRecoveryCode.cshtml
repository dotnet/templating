@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery Code Verification";
}

<h2>@ViewData["Title"].</h2>
<div class="row">
    <p>You have requested to login with a recovery code. This login will not be remembered until you provide
       an authenticator app code at login or disable 2FA and login again.</p>
    <hr />

    <form method="post" class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.RecoveryCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Log in</button>
            </div>
        </div>
    </form>
 </div>